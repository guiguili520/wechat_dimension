.swiper-image {
  width: 100%;
  height: 400rpx;
  background-size: 100%;
  background-repeat: no-repeat;
}
.login-container {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  padding: 0 30rpx 15rpx;
  justify-content: space-between;
  margin-top: 4rpx;
}
.login-container__children {
  width: 120rpx;
  height: 120rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  background: #fff;
  /* flex-wrap: wrap; */
  align-content: space-around;
  margin-top: 15rpx;
  border-radius: 16rpx;
  padding: 3rpx 0;
}
.login-scroll {
  /* height: 60rpx; */
  white-space: nowrap;
  background: #fff;
  padding: 0 30rpx;
  border-bottom: 2rpx solid #e1e1e1;
  box-shadow: 0 -4rpx 12rpx #e1e1e1;
}
.login-scroll view {
  display: inline-block;
  color: #8E8E8E;
  font-size: 28rpx;
  margin-right: 60rpx;
  padding: 20rpx 0;
}
.login-scroll__blue {
  color: #4876FF !important;
  border-bottom: 4rpx solid #4876FF;
}
.login-tab__list {
  width: 100%;
  background: #fff;
}
.login-tab__list--content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  border-bottom: 2rpx solid #e1e1e1;
}
.login-userinfo__img {
  border-radius: 50%;
  background-size: 100%;
  background-repeat: no-repeat;
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}
.login-userinfo__value {
  color: #8E8E8E;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
}
.login-userinfo__value text:first-child {
  margin-bottom: 16rpx;
}
.login-userinfo {
  display: flex;
  /* flex-direction: column; */
  padding: 20rpx;

}
.login-tab__list--footer {
  background: #fff;
  padding: 20rpx;
  color: #333;
  font-size: 26rpx;
}
.login-tab__list--image {
  width: 160rpx;
  height: 100rpx;
  margin-right: 6rpx;
}