.swiper-image {
  width: 100%;
  height: 400rpx;
  background-size: 100%;
  background-repeat: no-repeat;
}
.login-container {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  padding: 15rpx 30rpx;
  justify-content: space-between;
  margin-top: 4rpx;
}
.login-container__children {
  width: 120rpx;
  height: 120rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  background: #fff;
  /* flex-wrap: wrap; */
  align-content: space-around;
}
.login-scroll {
  /* height: 60rpx; */
  white-space: nowrap;
  background: #fff;
  padding: 0 30rpx;
  border-bottom: 2rpx solid #e1e1e1;
  box-shadow: 0 -4rpx 12rpx #e1e1e1;
}
.login-scroll view {
  display: inline-block;
  color: #8E8E8E;
  font-size: 28rpx;
  margin-right: 60rpx;
  padding: 20rpx 0;
}
.login-scroll__blue {
  color: #4876FF !important;
  border-bottom: 4rpx solid #4876FF;
}